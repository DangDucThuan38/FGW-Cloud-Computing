<div class="container col-md-10">
  <form
    class="card p-3 bg-light text-center mt-3 mb-3"
    href="/category/edit/{{_id}}"
    method="post"
  >
    <h2 class="text-bg-info">Edit category </h2>
   
    <div class="form-group">
      <label class="h5 text-secondary">Name Category</label>
      <input type="text" name="name" class="form-control" required value="{{category.name}}"
    
      /></div>

    <div class="form-group">
      <label class="h5 text-secondary"> Describe of category</label>
      <input type="text" name="describe" class="form-control"   value="{{category.describe}}"/></div>
    <div class="form-group">
      <label class="h5 text-secondary">Image</label>
      <input type="text" name="image" class="form-control" required value="{{category.image}}"/></div>
       <div class="form-group">
   
    <div class="form-group">
      <input type="submit" class="btn btn-primary mt-3" value="Edit" /></div>
  </form>
</div>