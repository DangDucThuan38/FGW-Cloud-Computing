<div class="container col-md-10">
  <form
    class="card p-3 bg-light text-center mt-3 mb-3"
    href="/category/add"
    method="post"
  >
    <h2 class="text-bg-info">Add new category </h2>
   
    <div class="form-group">
      <label class="h5 text-secondary">Name Category</label>
      <input type="text" name="name" class="form-control" required placeholder="Enter name category"
    
      /></div>

    <div class="form-group">
      <label class="h5 text-secondary"></label>
      <input type="text" name="describe" class="form-control" required placeholder="Enter price of product" /></div>
    <div class="form-group">
      <label class="h5 text-secondary">Image</label>
      <input type="text" name="image" class="form-control" required placeholder="Enter image"/></div>
       <div class="form-group">
      <div class="form-group mt-3">
         <label class="text-success h6">Name Toy</label>
         <select name="toy"  size="13" class="form-control" multiple>
            <option value="">Select a year</option>
            <option value="Lego">Lego</option>
            <option value="Oto">Oto</option>
            <option value="Bupbe">Bupbe</option>
            <option value="Plain">Plain</option>
         </select>
      </div>
    <div class="form-group">
      <input type="submit" class="btn btn-primary mt-3" value="Add" /></div>
  </form>
</div>