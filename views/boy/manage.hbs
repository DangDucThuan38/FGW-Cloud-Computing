




<div class="container col-md-12 text-center mt-3">
<tr>
        <th colspan="3" class="text text-primary"><h2>List of Product</h2></th>

        <th> <a class="btn btn-info text-center" href="/boy/add">Add new product</a>
        </th>
     
          	<div class="row mt-5">
						<div class="col">
							<div class="row">
								<div class="col-5 mt-2">
									<h6 class="text text-success">Sort Product</h6>
								</div>
								<div class="col-7 ">
									<select class="form-control" onchange="window.location.href=this.value">
										<option value="">Select one</option>
										<option value="/boy/sort/desc"> Ascending</option>
										<option value="/boy/sort/asc"> Descending</option>
									</select>
								</div>
							</div>
						</div>
						<div class="col">
						<div class="row">
						<div class="col-5 mt-2">
							<h6 class="text text-success">Search Product</h6>
						</div>
						<div class="col-7">
							<div class="form-group">
								<form action="/boy/search" method="post">
									<input class="form-control" type="search" name="name" placeholder="Enter Name Product">
								</form>
							</div>
						</div>
						</div>
         
        			 </div>
			</div>
    <table class="table table-info">

    <thead>
        
        <tr>
          <th>Code product</th>
            <th>Name Product</th>
            <th>Image</th>
            <th> Price</th>
            <th>Status</th>
            <th>Actions</th>
           
        </tr>
    </thead>
    <tbody>
 
    {{#each boy}}
   <tr>
    <td><a>{{code}}</a></td>
   <td><a>{{name}}</a></td>
    <td>
        <a href="/detail/{{_id}}">
            <img src="{{image}}" width="180" height="180">
         </a>
    
    <td>{{price}}$</td>
 
    <td>{{status}}</td>
      <td>
         <a  href="/boy/edit/{{_id}}"><img src="https://img.icons8.com/color/48/000000/edit--v1.png"/></a>
         <a  href="/boy/delete/{{_id}}" 
         onclick="return confirm('Are you sure to delete ?')";><img src="data:image/png;base64,"></a>
      </td>
      
   </tr>
   {{/each}}
       
    </tbody>
  </table>
</div>
