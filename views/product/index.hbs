
<div class="container col-md-10 text-center mt-5">
<tr>
        <th colspan="3" class="text text-primary"><h2>List of Product</h2></th>

        <th> <a class="btn btn-info text-center" href="/add">Add new product</a>
        </th>
     
          	<div class="row mt-5">
						<div class="col">
							<div class="row">
								<div class="col-5 mt-2">
									<h6 class="text text-success">Sort Product</h6>
								</div>
								<div class="col-7 ">
									<select class="form-control" onchange="window.location.href=this.value">
										<option>Select one</option>
										<option value="/product/sort/desc"> Ascending</option>
										<option value="/product/sort/asc"> Descending</option>
									</select>
								</div>
							</div>
						</div>
						<div class="col">
						<div class="row">
						<div class="col-5 mt-2">
							<h6 class="text text-success">Search Product</h6>
						</div>
						<div class="col-7">
							<div class="form-group">
								<form action="/product/search" method="post">
									<input class="form-control" type="search" name="name" placeholder="Enter Name Product">
								</form>
							</div>
						</div>
						</div>
         
        			 </div>
			</div>
    <table class="table table-info">

    <thead>
        
        <tr>
            <th>Name Product</th>
            <th>Image</th>
            <th> Price</th>
            <th>Suitable age</th>
            <th>Status</th>
            <th>Actions</th>
           
        </tr>
    </thead>
    <tbody>
 
    {{#each product }}
   <tr>
   <td><h5>{{name}}</h5></td>
    <td>
        <a href="/detail/{{_id}}">
            <img src="{{image}}" width="180" height="180">
         </a>
    
    <td>{{price}}$</td>
    <td>{{age}}</td>
    <td>{{status}}</td>
      <td>
         <a class="btn btn-warning" href="/edit/{{_id}}">EDIT</a>
         <a class="btn btn-danger" href="/delete/{{_id}}" 
         onclick="return confirm('Are you sure to delete this student ?')";>DELETE</a>
      </td>
      
   </tr>
   {{/each}}
       
    </tbody>
  </table>
</div>



